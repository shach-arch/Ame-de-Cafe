{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "vite-env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
